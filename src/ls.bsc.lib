/*******************************************************************************
* BASIC OPERATIONS AND SIGNALS
*******************************************************************************/
import("ls.lib");

// clipping functions                      
clip(low, high, x) = max(low, min(high, x));  
limit(low, high, x) = clip(low, high, x);

// softclipping via hyperbolic tangent function
saturator(lim, x) = lim * tanh(1, x / (max(lim, EPS)));

// signal signum
signum(x) = (x > 0) - (x < 0);

// Unipolar to bipolar
uni2bi(x) = x * 2.0 - 1.0;

// Bipolar to unipolar
bi2uni(x) = (x + 1) * 0.5;

// only decimal pass
decimal(x) = x - int(x);

// only integer pass
integer(x) = int(x);

// first derivate
derivate(x) = x < x';

// shift in phase (0 to 1) giving only the fractional part of x
phwrap(ph, x) = x <: (_ + ph) - int(_ + ph);