/*******************************************************************************
* SAH : SAMPLE AND HOLD
*******************************************************************************/
import("ls.lib");

// binary selector
selector(sel, x, y) = x * (1 - sel) + y * (sel);

// a classic sample and hold
sah(x, t) = selector(t, _, x) ~ _;

// sample and hold with internal trigger
sahSinc(f, x) = selector(phasor(f) : derivate, _, x) ~ _;